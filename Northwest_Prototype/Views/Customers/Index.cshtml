                @Html.DisplayFor(modelItem => item.CustEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustBillAdd1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustBillAdd2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustBillCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustBillState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustBillZip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustBillCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustBillZip)
            </td>
            <td>
                <button type="button" class="btn-secondary">
                    @Html.ActionLink("Edit", "Edit", new { id = item.CustomerID })
                </button>
                <button type="button" class="btn-secondary">
                    @Html.ActionLink("Details", "Details", new { id = item.CustomerID })
                </button>
                <button type="button" class="btn-secondary">
                    @Html.ActionLink("Delete", "Delete", new { id = item.CustomerID })
                </button>
            </td>
        </tr>
    }

